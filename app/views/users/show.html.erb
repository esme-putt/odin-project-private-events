<h1><%= @user.email %></h1>

<h2>Created events:</h2>

<ul>
    <% @events.each do |event| %>
        <li>
            <%= link_to event.name, event %><br>
        </li>
    <% end %>
</ul>

<h2>Past events:</h2>

<ul>
    <% @past_events.each do |event| %>
        <li>
            <%= link_to event.name, event %><br>
        </li>
    <% end %>
</ul>

<h2>Upcoming events:</h2>

<ul>
    <% @upcoming_events.each do |event| %>
        <li>
            <%= link_to event.name, event %><br>
        </li>
    <% end %>
</ul>